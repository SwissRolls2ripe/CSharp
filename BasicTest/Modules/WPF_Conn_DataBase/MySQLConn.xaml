<Window x:Class="BasicTest.MySQLConn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicTest"
        mc:Ignorable="d"
        Title="MySQL数据库连接" Height="600" Width="1000" Closing="Window_Closing">
    <Grid Height="600" Width="1000">
        <Grid.RowDefinitions>
            <RowDefinition Height="500"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="MyGrid" Height="400" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
        <Button Name="GetData" Width="60" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,70" Grid.Row="1" Click="GetData_Click">获取数据</Button>
    </Grid>
</Window>
